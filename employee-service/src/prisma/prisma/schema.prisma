generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employee {
  id           Int        @id @default(autoincrement())
  fullname     String
  email        String
  phone        String
  salary       Int
  gender       String
  birthdate    DateTime
  role         String
  designation  String
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId Int
  joindate     DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Department {
  id       Int        @id @default(autoincrement())
  name     String
  Employee Employee[]
}
