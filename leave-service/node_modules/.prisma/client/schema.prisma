generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Leave {
  id         Int      @id @default(autoincrement())
  startDate  DateTime
  endDate    DateTime
  reason     String
  leaveType  String
  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id])
}

model Employee {
  id    Int     @id @default(autoincrement())
  name  String
  Leave Leave[]
}
